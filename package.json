{
  "name": "screen-visualization",
  "version": "1.0.4",
  "description": "大屏可视化展示组件库",
  "main": "lib/index.umd.js",
  "module": "lib/index.esm.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext 'src/**/*.{js,ts}' --fix",
    "dev": "rollup -w -c --environment FORMAT:esm",
    "build:esm": "rollup -c --environment FORMAT:esm",
    "build:umd": "rollup -c --environment FORMAT:umd",
    "build:min": "rollup -c --environment FORMAT:min",
    "build": "rimraf lib/* && run-p build:esm build:umd build:min"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**": [
      "prettier --config .prettierrc --write",
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yangchen62/data-view.git"
  },
  "keywords": [
    "大屏",
    "可视化"
  ],
  "author": "yangchen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yangchen62/data-view/issues"
  },
  "homepage": "https://github.com/yangchen62/data-view#readme",
  "dependencies": {
    "@babel/preset-react": "^7.10.4",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "enzyme-adapter-react-16": "^1.15.4",
    "jest-config": "^26.4.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.26.5",
    "rollup-plugin-scss": "^2.6.0",
    "ts-jest": "^26.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/react-hooks": "^3.4.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "enzyme": "^3.11.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "lodash.merge": "^4.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^4.0.2"
  }
}
